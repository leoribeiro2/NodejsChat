<div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" placeholder="Enter room name" value="{{ room.name }}">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" name="description" placeholder="Enter room description" value="{{ room.description }}">
</div>
<div class="form-gruop">
    <label for="enable">Enabled</label>
    <input type="checkbox" name="enable" value="{{ room.enable }}" {{checkedIf room.enable }}>
    <label for="enable">Enable/Disable ?</label>
</div>
<div class="form-group">
    <button type="submit" class="btn btn-primary">Save</button>
</div>